# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB
MONGO_URI=mongodb://localhost:27017/acne_detection

# JWT Secrets (generate strong random strings for production)
JWT_SECRET=your_super_secret_jwt_access_key_here
JWT_REFRESH_SECRET=your_super_secret_jwt_refresh_key_here

# SMTP configuration (used by Nodemailer)
# Example: use SMTP credentials from your provider (SendGrid, Mailgun, SES, or your mail host)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password
SMTP_SECURE=false
SMTP_FROM="AcneAI <no-reply@example.com>"
SMTP_DOMAIN=example.com

# Frontend URL (for CORS and email links)
FRONTEND_URL=http://localhost:3000

